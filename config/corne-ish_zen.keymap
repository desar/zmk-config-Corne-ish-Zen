#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define QWERTY 0
#define LOWER  1
#define RAISE  2
#define ADJUST 4

#define JIME	LA(GRAVE)
#define DSKR	LC(LWIN(RIGHT))
#define DSKL	LC(LWIN(LEFT))
#define MCPY	LC(C)
#define MPST	LC(V)
#define RERE	LC(R)

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
                        label = "QWERTY";
                        bindings = <
   &kp TAB   &kp Q     &kp W     &kp E     &kp R     &kp T        &kp Y     &kp U     &kp I     &kp O     &kp P     &kp ESC
   &kp LSHFT &kp A     &kp S     &kp D     &kp F     &kp G        &kp H     &kp J     &kp K     &kp L     &kp SEMI  &kp SQT
   &kp LCTL  &kp Z     &kp X     &kp C     &kp V     &kp B        &kp N     &kp M     &kp COMMA &kp DOT   &kp FSLH  &kp RET
   &none &kp BSPC  &kp LWIN                                   &kp LALT  &kp SPACE &none
                        >;
                };

                raise_layer {
                        label = "RAISE";
                        bindings = <
   &kp JIME  &kp KP_N1 &kp KP_N2 &kp KP_N3 &kp KP_N4  &kp KP_N5   &kp KP_N6 &kp KP_N7 &kp KP_N8 &kp KP_N9 &kp KP_N0 &kp DEL
   &none     &none     &kp LEFT  &kp UP    &kp RIGHT  &kp DSKL    &none     &none     &none     &none     &none     &none  
   &none     &kp RERE  &kp MCPY  &kp DOWN  &kp MPST   &kp DSKR    &none     &none     &none     &none     &none     &none  
   &none &kp BSPC  &kp LWIN                                   &kp LALT  &kp SPACE &none
                        >;
                };

        };
};

